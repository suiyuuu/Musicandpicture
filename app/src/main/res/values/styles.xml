<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 基本应用主题 - 统一风格 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 统一字体 -->
        <item name="android:fontFamily">@font/poppins</item>
        <!-- 圆角风格 -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <!-- 圆角形状 -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- 导入按钮样式 - 更现代化设计 -->
    <style name="ImportButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- 卡片样式 - 漂浮感增强 -->
    <style name="AppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/colorAccent</item>
        <!-- 为卡片增加边距，防止重叠 -->
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- 标题文本样式 - 现代化字体 -->
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- 副标题文本样式 -->
    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:alpha">0.85</item>
    </style>

    <!-- 浮动按钮样式 - 更友好的交互 -->
    <style name="AddButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="tint">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

    <!-- 扩展浮动按钮样式 -->
    <style name="ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- 音乐滤镜按钮样式 - 更统一的外观 -->
    <style name="FilterButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <!-- 工具栏样式 - 透明度优化 -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@drawable/toolbar_gradient</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextColor">@color/text_color</item>
        <item name="android:titleTextColor">@color/text_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- 无ActionBar的主题 -->
    <style name="Theme.Musicandpicture.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- 关键词按钮样式 - 更美观的选择样式 -->
    <style name="KeywordButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/keyword_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/keyword_background</item>
        <item name="backgroundTint">@color/keyword_background</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- 选中状态的关键词按钮 -->
    <style name="KeywordButtonSelectedStyle" parent="KeywordButtonStyle">
        <item name="android:textColor">@color/keyword_selected_text_color</item>
        <item name="strokeColor">@color/keyword_selected_background</item>
        <item name="backgroundTint">@color/keyword_selected_background</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- 保存/分享按钮样式 -->
    <style name="ActionButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="elevation">4dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>